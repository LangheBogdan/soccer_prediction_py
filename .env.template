# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=soccer_prediction
DATABASE_USER=soccer_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_ENGINE=postgresql  # postgresql or sqlite

# External API Keys
FOOTBALL_DATA_API_KEY=your_football_data_org_api_key
API_FOOTBALL_API_KEY=your_api_football_com_api_key
ODDS_API_KEY=your_the_odds_api_com_api_key

# Web Scraper Configuration
FBREF_REQUEST_DELAY=2.0  # Seconds between FBref requests (be respectful)
FBREF_TIMEOUT=10  # Request timeout in seconds

# API Client Configuration
FOOTBALL_DATA_REQUEST_DELAY=0.5  # Seconds between football-data.org requests
API_FOOTBALL_REQUEST_DELAY=0.25  # Seconds between api-football.com requests

# Data Pipeline Configuration
DATA_SOURCES=fbref,football_data,api_football  # Comma-separated list of data sources to use
FETCH_MATCH_DETAILS=true  # Whether to fetch detailed match statistics
FETCH_PLAYER_STATS=false  # Whether to fetch player statistics (requires API)
RETRY_FAILED_REQUESTS=true  # Retry failed API requests
MAX_RETRIES=3  # Maximum number of retries for failed requests

# Application Settings
DEBUG=false
APP_PORT=8000
APP_HOST=0.0.0.0
ENV=development  # development, staging, production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/soccer_prediction.log  # Log file path (optional)